<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/alarm_list_time"
        android:layout_width="80dp"
        android:textSize="25dp"
        android:layout_marginStart="10dp"
        android:paddingTop="10dp"
        android:layout_height="match_parent" />
    <View
        android:id="@+id/alarm_list_border"
        android:layout_alignRight="@id/alarm_list_time"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#555555"/>
    <TextView
        android:id="@+id/alarm_list_repeat"
        android:layout_alignStart="@id/alarm_list_border"
        android:layout_width="200dp"
        android:paddingTop="17dp"
        android:layout_height="match_parent" />
    <com.kyleduo.switchbutton.SwitchButton
        android:layout_width="wrap_content"
        android:id="@+id/alarm_list_switch"
        android:layout_height="match_parent"
        android:paddingTop="17dp"
        android:paddingEnd="10dp"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>
