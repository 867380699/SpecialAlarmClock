<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:linksClickable="false"
        android:phoneNumber="false"
        android:text="重复"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="18sp"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/WeekButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_Sunday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="#f9f6f6"
                android:clickable="true"
                android:focusable="false"
                android:maxWidth="45dp"
                android:minWidth="45dp"
                android:text="日"/>

            <Button
                android:id="@+id/btn_Monday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="#f9f6f6"
                android:focusable="false"
                android:maxWidth="45dp"
                android:minWidth="45dp"
                android:text="一"/>

            <Button
                android:id="@+id/btn_Tuesday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="#f9f6f6"
                android:focusable="false"
                android:maxWidth="45dp"
                android:minWidth="45dp"
                android:text="二"/>

            <Button
                android:id="@+id/btn_Webnesday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="#f9f6f6"
                android:focusable="false"
                android:maxWidth="45dp"
                android:minWidth="45dp"
                android:text="三"/>

            <Button
                android:id="@+id/btn_Thursday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="#f9f6f6"

                android:maxWidth="45dp"
                android:minWidth="45dp"
                android:text="四"/>

            <Button
                android:id="@+id/btn_Friday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="#f9f6f6"

                android:maxWidth="45dp"
                android:minWidth="45dp"
                android:text="五"/>
            <!-- button可能需要如此设置-->
            <!--android:focusable="false"-->

            <Button
                android:id="@+id/btn_Saturday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:autoText="false"
                android:background="#f9f6f6"
                android:focusable="false"
                android:maxWidth="45dp"
                android:minWidth="45dp"
                android:text="六"/>
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>