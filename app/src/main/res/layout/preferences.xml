<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include layout="@layout/time_picker"/>
        <include layout="@layout/simple_edit_text"/>

        <include layout="@layout/week_button"
            android:id="@+id/ll_repeat"/>
        <LinearLayout
            android:id="@+id/ll_ring"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:orientation="vertical">
            <TextView android:id="@+id/tv_ring_title"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="8dp"
                      android:text="铃声"
                      android:textAppearance="?attr/textAppearanceListItem" />

            <TextView android:id="@+id/tv_ring_subtitle"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"/>
        </LinearLayout>

        <include layout="@android:layout/simple_list_item_checked"/>
    </LinearLayout>
</ScrollView>


